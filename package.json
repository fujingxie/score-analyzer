{
  "name": "score-analyzer",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "build:win": "vite build && electron-builder --win --config",
    "build:mac": "vite build && electron-builder --mac --config"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "crypto-js": "^4.2.0",
    "echarts": "^6.0.0",
    "electron-store": "^11.0.2",
    "element-plus": "^2.13.0",
    "html2canvas": "^1.4.1",
    "lodash": "^4.17.21",
    "node-machine-id": "^1.1.12",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.24",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "com.xiexiansheng.scoremaster",
    "productName": "成绩分析助手",
    "copyright": "Copyright © 2026 Xie Xian Sheng",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ],
      "artifactName": "${productName}-${version}-Mac.${ext}"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Win.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "成绩分析助手",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "成绩分析助手 (卸载)",
      "deleteAppDataOnUninstall": true
    }
  }
}
